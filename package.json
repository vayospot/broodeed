{
  "name": "broodeed-monorepo",
  "version": "1.0.0",
  "description": "Broodeed Monorepo: Mobile App + Backend (Creem)",
  "private": true,
  "workspaces": [
    "mobile",
    "backend"
  ],
  "overrides": {
    "@types/react": "~19.1.0"
  },
  "scripts": {
    "mobile": "npm start --workspace=mobile",
    "backend": "npm run dev --workspace=backend",
    "install:all": "npm install",
    "lint": "npm run lint --workspaces",
    "test": "npm test --workspaces"
  }
}
